<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.techtown.showbook">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SHOWBOOK"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".MyInfoActivity"
            android:exported="false" />
        <activity
            android:name=".AllSplashActivity"
            android:exported="true" />
        <activity
            android:name=".auth.JoinActivity"
            android:exported="false" />
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".auth.IntroActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".bookinfo.BookReviewActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true"></activity>
        <activity android:name=".bookinfo.BookReviewActivity2" />
        <activity android:name=".usedbookstore.home.AddArticleActivity" />
        <activity android:name=".bookinfo.MyBookActivity" />
        <activity android:name=".usedbookstore.chatdetail.ChatRoomActivity" />
        <activity android:name=".mypage.Login2Activity" />
        <activity android:name=".mypage.Signup2Activity" />
        <activity android:name=".usedbookstore.home.UsedBookDetail" />
        <activity android:name=".usedbookstore.chatlist.ChatListActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>